{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ECSServiceUpdate",
            "Effect": "Allow",
            "Action": [
                "ecs:UpdateService",
                "ecs:DescribeServices"
            ],
            "Resource": "arn:aws:ecs:us-east-2:196786876277:service/ecs-api-xpto/simple-api-task-service"
        },
        {
            "Sid": "SNSAccess",
            "Effect": "Allow",
            "Action": "sns:Publish",
            "Resource": "arn:aws:sns:us-east-2:196786876277:ecs-deploy-notifications"
        },
        {
            "Sid": "CodeDeployAccess",
            "Effect": "Allow",
            "Action": [
                "codedeploy:CreateDeployment",
                "codedeploy:GetDeployment",
                "codedeploy:RegisterApplicationRevision"
            ],
            "Resource": "*"
        },
        {
            "Sid": "PassRoleAccess",
            "Effect": "Allow",
            "Action": "iam:PassRole",
            "Resource": [
                "arn:aws:iam::196786876277:role/ecs-execution-role-api-xpto",
                "arn:aws:iam::196786876277:role/ecs-task-role-api-xpto"
            ],
            "Condition": {
                "StringLike": {
                    "iam:PassedToService": [
                        "codedeploy.amazonaws.com",
                        "ecs-tasks.amazonaws.com"
                    ]
                }
            }
        },
        {
            "Sid": "LoggingAccess",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": "arn:aws:logs:*:*:*"
        }
    ]
}